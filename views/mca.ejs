<script>

var table, tr, td, i;
  table = document.getElementById("myTable");
  table.querySelectorAll('tr').forEach(e => e.style.display = "none");
  table.querySelectorAll('tr').forEach(e => e.style.display = "");

function myFunction() {
  var input, filter, table, tr, td, i, txtValue;
  table = document.getElementById("myTable");
  table.querySelectorAll('tr').forEach(e => e.style.display = "");
  if(document.getElementById("sem").value.length != 0){
  input = document.getElementById("sem");
  filter = input.value.toUpperCase();
  table = document.getElementById("myTable");
  tr = table.querySelectorAll('tr[style=""]');
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[2];
    if (td) {
      txtValue = td.textContent || td.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }
  }
  }

}
function clearFilter(){
  var table, tr, td, i;
  table = document.getElementById("myTable");
  table.querySelectorAll('tr').forEach(e => e.style.display = "");
}

    let show=true;
